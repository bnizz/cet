<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    
    <!-- Main Settings Frame -->
    <Frame name="CETUIFrame" frameStrata="DIALOG" toplevel="true" movable="true" enableMouse="true" hidden="true" parent="UIParent">
        <Size>
            <AbsDimension x="500" y="720"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentTitle" inherits="GameFontHighlight">
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="-16"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsDimension x="0" y="0"/>
                    </Size>
                </FontString>
            </Layer>
        </Layers>
        
        <Frames>
            <!-- Close Button -->
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-8" y="-8"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            
            <!-- Scroll Frame for Settings -->
            <ScrollFrame name="$parentScrollFrame" inherits="UIPanelScrollFrameTemplate">
                <Size>
                    <AbsDimension x="450" y="620"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="25" y="-50"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <ScrollChild>
                    <Frame name="$parentScrollChild">
                        <Size>
                            <AbsDimension x="430" y="800"/>
                        </Size>
                    </Frame>
                </ScrollChild>
            </ScrollFrame>
            
            <!-- Bottom Buttons -->
            <Button name="$parentSaveButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="80" y="22"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="25" y="15"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <NormalText inherits="GameFontNormal"/>
            </Button>
            
            <Button name="$parentResetButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="80" y="22"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativeTo="$parentSaveButton" relativePoint="BOTTOMRIGHT">
                        <Offset>
                            <AbsDimension x="10" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <NormalText inherits="GameFontNormal"/>
            </Button>
            
            <Button name="$parentCancelButton" inherits="UIPanelButtonTemplate">
                <Size>
                    <AbsDimension x="80" y="22"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset>
                            <AbsDimension x="-25" y="15"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <NormalText inherits="GameFontNormal"/>
            </Button>
        </Frames>
        
        <Scripts>
            <OnLoad>
                CETUI_OnLoad()
            </OnLoad>
            <OnShow>
                CETUI_OnShow()
            </OnShow>
            <OnHide>
                CETUI_OnHide()
            </OnHide>
            <OnDragStart>
                this:StartMoving()
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing()
            </OnDragStop>
        </Scripts>
    </Frame>
    
</Ui>
